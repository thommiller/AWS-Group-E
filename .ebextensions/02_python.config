container_commands:
  01_migrate:
    command: "source /opt/python/run/venv/bin/activate && python djangoBackend/manage.py migrate --noinput"
    leader_only: true
  02_collectstatic:
    command: "source /opt/python/run/venv/bin/activate && python djangoBackend/manage.py collectstatic --noinput"

option_settings:
  "aws:elasticbeanstalk:application:environment":
    DJANGO_SETTINGS_MODULE: "djangoBackend.settings"
    "PYTHONPATH": "/opt/python/current/app/djangoBackend:$PYTHONPATH"
  "aws:elasticbeanstalk:container:python":
    WSGIPath: djangoBackend/djangoBackend/wsgi.py
    NumProcesses: 1
    NumThreads: 4
  "aws:elasticbeanstalk:container:python:staticfiles":
    "/static/": "www/"